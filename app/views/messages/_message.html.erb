<div id="message-<%= message.id %>"> <!-- artist name and avatar will appear here - style this -->
  <small>
    <strong><%= link_to message.user.nickname, artist_path(message.user_id) %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
