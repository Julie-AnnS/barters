  <div data-search-contacts-target="list"> <!-- contact card - style this -->
    <% @conversations.each do |conversation| %>
    <div class="container-contact">
    <div class="img-container-avatar">
        <%= image_tag "avatar.svg", class:"img-avatar-contact" %>
    </div>
      <p class="name-contact">
        <% if conversation.participant_one_id == current_user.id %>
          <%= link_to conversation.participant_two.first_name, conversation_path(conversation) %>
        <% else %>
          <%= link_to conversation.participant_one.first_name, conversation_path(conversation) %>
        <% end %>
      </p>
    </div>
    <% end %>
  </div>
