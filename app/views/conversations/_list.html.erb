<div class="contacts">
  <div class="contacts-inner" data-search-contacts-target="list"> <!-- contact card - style this -->
    <% @conversations.each do |conversation| %>
    <div class="container-contact">
      <div class="img-container-avatar">
          <% if conversation.participant_one_id == current_user.id %>
            <% if conversation.participant_two.avatar.attached? %>
              <%= link_to cl_image_tag(conversation.participant_two.avatar.key, class:"img-card"), artist_path(conversation.participant_two_id) %>
            <% end  %>
          <% else %>
            <% if conversation.participant_one.avatar.attached? %>
              <%= link_to cl_image_tag(conversation.participant_one.avatar.key, class:"img-card"), artist_path(conversation.participant_one_id) %>
            <% end %>
          <% end %>
      </div>
      <div class="name-container">
        <div class="name-contact">
          <% if conversation.participant_one_id == current_user.id %>
            <%= link_to "#{conversation.participant_two.first_name} #{conversation.participant_two.last_name}", conversation_path(conversation) %>
          <% else %>
            <%= link_to "#{conversation.participant_one.first_name} #{conversation.participant_one.last_name}", conversation_path(conversation) %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
