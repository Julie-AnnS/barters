<h1> Make an offer to <%=@collaborator.first_name%> </h1>

<%= simple_form_for([@collaborator, @offer]) do |f| %>

  <div class="offers_form">
    <%= f.input :my_tasks %>
    <%= f.input :others_tasks %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :deposit %>

<%= link_to "Confirm", root_path , class: "btn btn-accept rounded-pill" %>
<%= link_to "Cancel", root_path , class: "btn btn-decline rounded-pill" %>
  </div>
<% end %>
