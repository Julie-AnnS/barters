<h2>Please fill out the offer form</h2>

<%= simple_form_for([@user, @offer]) do |f| %>

  <div class="offers_form">
    <%= f.input :my_tasks %>
    <%= f.input :others_tasks %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :deposit %>
    <%= f.button :submit, "Confirm offer" %>
  </div>
<% end %>
